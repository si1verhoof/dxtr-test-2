imgCentering()
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%) scale(1)
  transition 1s transform
  will-change transform
  
imgCenteringMax90()
  position absolute
  left 50%
  top 50%
  max-width 90%
  max-height 90%
  transform translate(-50%, -50%) scale(1)
  transition 1s transform
  will-change transform
  
imgCenteringMax100()
  position absolute
  left 50%
  top 50%
  max-width 100%
  max-height 100%
  transform translate(-50%, -50%) scale(1)
  transition 1s transform
  will-change transform

imgCenteringMin()
  position absolute
  left 50%
  top 50%
  min-height 100%
  min-width 100%
  transform translate(-50%, -50%) scale(1)
  will-change transform
  
imgCenteringZoom()
  transform translate(-50%, -50%) scale(1.02)
  
size($w, $h = $w)
  width $w
  height $h
  
ib($align = top)
  display inline-block
  vertical-align $align
  
fontify($fs, $fw, $lh)
  font-size $fs
  font-weight $fw
  line-height $lh
  
oh()
  overflow hidden

w($val)
  width $val

h($val)
  height $val
  
t($val)
  top $val
  
r($val)
  right $val
  
l($val)
  left $val
  
b($val)
  bottom $val

bgc($val)
  background-color $val
  
dn()
  display none
  
db()
  display block
  
df($at = flex-start, $jc = flex-start)
  display flex
  align-items $at
  justify-content $jc
  
dfv($at = flex-start, $jc = flex-start)
  display flex
  flex-direction column
  align-items $at
  justify-content $jc
  
full()
  t 0
  r 0
  b 0
  l 0
  
pos($val)
  position $val
  
mr($val)
  margin-right $val

mt($val)
  margin-top $val

ml($val)
  margin-left $val
  
mb($val)
  margin-bottom $val
  
pr($val)
  padding-right $val

pt($val)
  padding-top $val

pl($val)
  padding-left $val
  
pb($val)
  padding-bottom $val
  
c($val)
  color $val

bb($size = 1px, $type = solid, $color = rgba($dark, .25))
  border-bottom $size $type $color
  transition .7s border-color
  &:hover
    border-color transparent

bb_invert($size = 1px, $type = solid, $color = rgba($dark, .25))
  border-bottom $size $type transparent
  transition .7s border-color
  &:hover
    border-color $color

rem($val)
  return unit($val/16, 'rem')