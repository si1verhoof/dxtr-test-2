@media $PortraitMaxFrom
  .h-anim
    pos relative
    opacity 0
    b -20px
    transition 1s opacity, 1s bottom
    &[visible]
      b 0
      opacity 1
      @media $LandscapeMinFrom
        &[data-delay="1"]
          transition-delay .7s
        &[data-delay="2"]
          transition-delay 1.4s