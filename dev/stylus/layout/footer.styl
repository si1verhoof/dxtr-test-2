.footer
  height 120px
  color $fdgray

  .wrapper
    width 1200px
    margin 0 auto
    display flex
    flex-direction row
    align-items center
    height 100%
    font-family $PS

  &__copyright
    fontify 18px 400 22px
    mr 190px

  &__adress
    fontify 18px 400 26px
    mr 315px
    min-width: 390px;



  &__dextra
    pos relative
    color silver
    font-family Verdana, Geneva, sans-serif
    fontify 9px 400 14px
    text-transform uppercase
    letter-spacing 0.18em
    @media $PortraitMedium
      l 42px
    span
      pos absolute
      t 3px
      r calc(100% + 10px)
      bgc #dfdfdf
      color white
      font-family Arial
      fontify 12px 900 21px
      text-transform uppercase
      letter-spacing 0.1em
      border-radius 3px
      padding 0 6px
      transition 0.7s background
    &:hover span
      background-color $green