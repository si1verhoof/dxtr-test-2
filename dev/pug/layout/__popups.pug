              .swiper-slide
                +e.item
                  +e('p').item-title Жилой квартал <br>ул. Котина – ул. Горького
                  +e('p').item-area 16,5 тыс. м²
                +e.item-bottom
                  +e.item-img(src="img/house1.png")
                  +e('p').item-year 2005 г
              .swiper-slide
                +e.item
                  +e('p').item-title Жилой квартал <br>«31 МИКРОРАЙОН» 
                  +e('p').item-area 38,8 тыс. м²
                +e.item-bottom
                  +e.item-img(src="img/house2.png")
                  +e.item-year 2006 г
              .swiper-slide
                +e.item
                  +e('p').item-title Жилой квартал <br>«ТРИ КИТА»
                  +e('p').item-area 45,6 тыс. м²
                +e.item-bottom
                  +e.item-img(src="img/house3.png")
                  +e.item-year 2007 г
              .swiper-slide
                +e.item
                  +e('p').item-title Жилой квартал <br>ул. Котина – ул. Горького
                  +e('p').item-area 72,4 тыс. м²
                +e.item-bottom
                  +e.item-img(src="img/house4.png")
